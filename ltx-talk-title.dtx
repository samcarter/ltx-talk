% \begin{macro}{\maketitle}
%   A very simple setup.
%    \begin{macrocode}
\NewDocumentCommand \maketitle { O {} }
  {
    \bool_if:NTF \l_@@_frame_bool
      { \UseTemplate { titlepage } { talk } {#1} }
      {
        \begin { frame }
          \UseTemplate { titlepage } { talk } {#1}
        \end { frame }
      }
  }
