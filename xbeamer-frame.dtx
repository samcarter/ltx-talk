% \begin{macro}{\@@_slide:n}
%    \begin{macrocode}
\cs_new_protected:Npn \@@_slide:n #1
  {
    \group_begin:
      \int_gzero:N \g_@@_slide_int
      \RenewCommandCopy \frame \@@_latexe_frame:n
      \bool_do_while:Nn \g_@@_slide_continue_bool
        {
          \@@_slide_begin:
            #1
          \@@_slide_end:
        }
    \group_end:
  }
%    \end{macrocode}
